<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class= "btn btn-success">Nova postagem</button></a>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h4>
        <h4>Descrição: {{descricao}}</h4>
        <small>Data: {{data}}</small><br>
        <small>Categoria: {{categoria.nome}}</small><br>
        <a href="/admin/postagens/edit/{{id}}"><button class="btn btn-success mt-4">Editar postagem</button></a>
        <a href="/admin/postagens/deletar/{{id}}"><button class="btn btn-danger mt-4">Deletar postagem</button></a>

    </div>
</div>

{{else}}
    <h4 class="mt-4">Ainda não nenhuma postagem!</h4>
{{/each}}